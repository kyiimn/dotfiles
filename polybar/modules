[module/updates]
type = custom/script
exec = ~/.config/scripts/update
format = <label>
format-background = ${colors.background-updates}
format-padding = 1
interval = 30
label = %output%
label-foreground = ${colors.foreground}
click-left = alacritty -e ~/.config/scripts/pause yay -Syyu


