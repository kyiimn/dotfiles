[module/mem]
type = custom/script
exec = free -m | sed -n 's/^Mem:\s\+[0-9]\+\s\+\([0-9]\+\)\s.\+/\1/p'
format =  <label>
format-foreground = ${colors.foreground-mem}
format-underline = ${colors.foreground-mem}
format-padding = 1
label = %output%MB
label-foreground = ${colors.foreground}


