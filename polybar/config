[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 70

format = <ramp> <label>
format-warn = <ramp> <label-warn>
format-padding = 1
format-background = ${colors-new.background-temp}
label = %temperature-c%
label-warn = %temperature-c%
ramp-0 =  "󰜗" 


[module/bspwm]
type = internal/bspwm

pin-workspaces = true
inline-mode = true
enable-click = true
enable-scroll = true
reverse-scroll = false

format = <label-state>
format-background = ${colors-new.background}

ws-icon-0 = 1
ws-icon-1 = 2
ws-icon-2 = 3
ws-icon-3 = 4
ws-icon-4 = 5

label-focused = %name%
label-focused-background = ${colors-new.background-workspace-highlight}
label-focused-foreground = ${colors-new.foreground}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-background = ${colors-new.background-workspace-light}
label-unfocused-foreground = ${colors-new.foreground}
label-unfocused-padding = 1

label-occupied = %name%
label-occupied-background = ${colors-new.background-workspace}
label-occupied-foreground = ${colors-new.foreground-workspace}
label-occupied-padding = 1

label-empty = %name%
label-empty-background = ${colors-new.background-workspace}
label-empty-foreground = ${colors-new.foreground-workspace}
label-empty-padding = 1

label-urgent = %name%
label-urgent-background = ${colors-new.background-workspace}
label-urgent-foreground = ${colors-new.foreground-workspace}
label-urgent-padding = 1

label-separator = " "


