[module/mem]
type = custom/script
exec = free -m | sed -n 's/^Mem:\s\+[0-9]\+\s\+\([0-9]\+\)\s.\+/\1/p'
format =  <label>
format-background = ${colors-new.background-mem}
format-padding = 1
label = %output%MB


