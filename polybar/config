warn-temperature = 70

format = <ramp> <label>
format-warn = <ramp> <label-warn>
format-padding = 1
format-foreground = ${colors.foreground-temp}
label = %temperature-c%
label-warn = %temperature-c%
ramp-0 =  "󰜗" 


[module/bspwm]
type = internal/bspwm

pin-workspaces = true
inline-mode = true
enable-click = true
enable-scroll = true
reverse-scroll = false

format = <label-state>
format-background = ${colors.background}

ws-icon-0 = 1
ws-icon-1 = 2
ws-icon-2 = 3
ws-icon-3 = 4
ws-icon-4 = 5

label-focused = %name%
label-focused-background = ${colors.background-workspace-highlight}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-background = ${colors.background-workspace-light}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = 1

label-occupied = %name%
label-occupied-background = ${colors.background-workspace}
label-occupied-foreground = ${colors.foreground-workspace}
label-occupied-padding = 1

label-empty = %name%
label-empty-background = ${colors.background-workspace}
label-empty-foreground = ${colors.foreground-workspace}
label-empty-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.background-workspace}
label-urgent-foreground = ${colors.foreground-workspace}
label-urgent-padding = 1

label-separator = " "


