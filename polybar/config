[module/time]
type = internal/date
interval = 60
format = <label>
format-background = ${colors.background-round}
date = %{F#a8aeb6}󰥔 %H:%M%{F-}
time-alt = %{F#81cfff}󰃭 %Y-%m-%d (%a)%{F-}

label = %date%%time%


[module/mem]
type = custom/script
exec = free -m | sed -n 's/^Mem:\s\+[0-9]\+\s\+\([0-9]\+\)\s.\+/\1/p'
format = <label>
format-prefix = "﬙ " 
format-prefix-foreground = ${colors.orange}
format-padding = 1
label = %output%MB

