super + Return
    alacritty

super + {q,F4}
    bspc node -c

super + p
    xpad

super + d
    rofi -show drun -theme ~/.config/rofi/nord.rasi

super + c
    rofi -show calc -modi calc -no-show-match -no-sort -theme ~/.config/rofi/nord.rasi

XF86Audio{Raise,Lower}Volume
    amixer -q sset Master,0 {1%+,1%-} unmute

XF86AudioMute
    amixer -q sset Master,0 toggle

XF86Touchpad{On,Off}
    /usr/local/bin/touchpad_toggle.sh

XF86MonBrightness{Down,Up}
    xbacklight {-dec,-inc} 10

super + ctrl + e
    alacritty -e ranger

super + ctrl + m
    alacritty --title mpdclient -e ncmpcpp

super + ctrl + n
    alacritty --title cava -e cava

super + ctrl + b
    alacritty --title tty-clock -e tty-clock -c

super + ctrl + t
    alacritty -e bpytop

super + ctrl + i
    qutebrowser --target window

super + ctrl + v
    alacritty -e nvim

super + ctrl + c
    alacritty -e calcurse

super + ctrl + r
    rofi -show run

super + ctrl + j
    /opt/appimages/Joplin.AppImage

super + l
    xscreensaver-command -lock

super + u
    ~/.config/bspwm/app_menu.sh

super + w
    rofi -show window -theme ~/.config/rofi/nord.rasi

super + Tab
	rofi -show window -theme ~/.config/rofi/nord.rasi

Print
    scrot

super + Print
    scrot -s

super + {1,2,3,4,5,6,7,8,9,0}
    bspc desktop -f {1,2,3,4,5,6,7,8,9,0}

# 포커스이동
super + {Left,Down,Up,Right}
    bspc node -f {west,south,north,east}

# tiled 상태일때 위치이동
super + ctrl + {Up,Down,Left,Right}
    dir={north,south,west,east}; \
	bspc node -s "$dir.local" --follow || bspc node -m "$dir" --follow

# 크기변경
super + shift + {Up,Down,Left,Right}
	bspc node {-z bottom 0 -20,-z bottom 0 20,-z right -20 0,-z right 20 0}

super + shift + {0-9}
    bspc node -d {0-9}

super + shift + {f,b,t}
    bspc node -t {floating,fullscreen,tiled}

super + alt + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

super + alt + {q,r}
	bspc {quit,wm -r}

super + g
	bspc node -s biggest.window

super + equal
    .config/rofi/bin/menu_powermenu

super + shift + r
    bspc wm -r

ctrl + alt + t
    pkill -USR1 -x sxhkd

